{
    "name": "backend-seed",
    "version": "1.0.0",
    "description": "Backend environment",
    "author": "Felix Le <felix.le.236@gmail.com>",
    "scripts": {
        "watch": "./node_modules/.bin/grunt",
        "eslint": "./node_modules/.bin/eslint --ext .ts --ext .js ./src",
        "drop-db": "mongo backend_seed_development --eval 'db.dropDatabase();' && mongo backend_seed_staging --eval 'db.dropDatabase();'",
        "test": "NODE_ENV=Development ./node_modules/.bin/mocha --exit --require ts-node/register ./src/test/**/*.ts",
        "build": "npm run eslint && ./node_modules/.bin/grunt build",
        "start": "npm run eslint && ./node_modules/.bin/grunt build && NODE_ENV=Development node ./dest/server.js",
        "staging": "npm install && npm run eslint && ./node_modules/.bin/grunt build && NODE_ENV=Staging node ./dest/server.js",
        "production": "npm install && npm run eslint && ./node_modules/.bin/grunt build && NODE_ENV=Production node ./dest/server.js"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "crypto": "^1.0.1",
        "debug": "^3.1.0",
        "email-existence": "^0.1.6",
        "express": "^4.16.2",
        "mongoose": "^5.0.7",
        "morgan": "^1.9.0",
        "nodemailer": "^4.6.0",
        "validator": "^9.4.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/chai": "^4.1.2",
        "@types/express": "^4.11.1",
        "@types/mocha": "^2.2.48",
        "@types/mongoose": "^5.0.2",
        "@types/morgan": "^1.7.35",
        "@types/node": "^9.4.6",
        "@types/nodemailer": "^4.3.4",
        "babel-eslint": "^8.2.2",
        "chai": "^4.1.2",
        "eslint": "^4.18.1",
        "eslint-config-google": "^0.9.1",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.6.0",
        "eslint-plugin-standard": "^3.0.1",
        "eslint-plugin-typescript": "^0.9.0",
        "grunt": "^1.0.2",
        "grunt-contrib-watch": "^1.0.0",
        "grunt-exec": "^3.0.0",
        "grunt-sync": "^0.7.0",
        "mocha": "^5.0.1",
        "mockgoose": "^7.3.5",
        "ts-node": "^5.0.0",
        "typescript": "^2.7.2",
        "typescript-eslint-parser": "^14.0.0"
    }
}
