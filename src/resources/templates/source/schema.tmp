import * as mongoose from 'mongoose'; // eslint-disable-line
import MongoDB from 'multi-layer-pattern/dataAccess/MongoDB';
import I{pascalName} from '../../model/{camelName}/interfaces/I{pascalName}'; // eslint-disable-line

class {pascalName}Schema {
    static get schema() {
        let schemaDefinition: mongoose.SchemaDefinition = {
            name: {
                type: String,
                required: true,
                trim: true,
                min: 4,
                max: 50
            }
        };

        return MongoDB.initSchema(schemaDefinition);
    }
}

export default MongoDB.connection.model<I{pascalName}>('{pascalName}', {pascalName}Schema.schema);
